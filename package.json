{
  "name": "@se-oss/base64",
  "version": "1.0.2",
  "description": "Robust Base64 encoding/decoding for TypeScript, with URL-safe, Uint8Array, and streaming capabilities.",
  "keywords": [
    "base64",
    "encoding",
    "decoding",
    "typescript",
    "url-safe",
    "uint8array",
    "stream",
    "binary",
    "data-url"
  ],
  "homepage": "https://github.com/shahradelahi/ts-base64",
  "repository": "github:shahradelahi/ts-base64",
  "license": "MIT",
  "author": "Shahrad Elahi <shahrad@litehex.com> (https://github.com/shahradelahi)",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.cjs"
    },
    "./extend": {
      "types": "./dist/extend.d.ts",
      "import": "./dist/extend.js",
      "default": "./dist/extend.cjs"
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**",
    "!**/*.d.cts"
  ],
  "scripts": {
    "bench": "vitest bench --run",
    "build": "tsup",
    "ci:publish": "changeset publish",
    "clean": "git clean -dfx node_modules dist .tsbuildinfo",
    "dev": "tsup --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "pnpm typecheck && eslint .",
    "lint:fix": "eslint --fix .",
    "prepublishOnly": "pnpm build && pnpm lint && pnpm format:check && pnpm test",
    "test": "vitest --run",
    "typecheck": "tsc --noEmit"
  },
  "prettier": "@shahrad/prettier-config",
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@shahrad/eslint-config": "^1.0.1",
    "@shahrad/prettier-config": "^1.2.2",
    "@shahrad/tsconfig": "^1.2.0",
    "@types/node": "^24.9.2",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "js-base64": "^3.7.8",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.5"
  },
  "packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd",
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
